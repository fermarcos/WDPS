server {        
		location ~ \.php$
        {
                include /etc/nginx/fastcgi_params;
                fastcgi_pass 127.0.0.1:9000;
                fastcgi_index index.php;
                fastcgi_param SCRIPT_FILENAME /var/www/estadisticas/awstats$fastcgi_script_name;
        }

        listen 2292;

        root /var/www/estadisticas/awstats;
        index index.html;

        auth_basic "Introduzca su usuario y contrase√±a";
        auth_basic_user_file /etc/nginx/auth_users_awstats;

        autoindex on;
        ssl on;

        ssl_certificate /etc/ssl/estadisticas.crt;
        ssl_certificate_key /etc/ssl/estadisticas.key;
		
		access_log /var/www/estadisticas/access.log;
        error_log /var/www/estadisticas/error.log;
}